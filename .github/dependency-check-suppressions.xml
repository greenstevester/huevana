    <!-- Hue Certificate Suppression -->
    <suppress>
        <notes><![CDATA[
        The hue_certificate.pem file is a known Philips Hue Bridge certificate
        used for HTTPS communication. This is not a vulnerability but a necessary
        component for secure communication with Hue Bridges.
        Review Date: 2025-02-01
        ]]></notes>
        <filePath regex="true">.*hue_certificate\.pem$</filePath>
    </suppress>
    
    <!-- Test Dependencies -->
    <suppress>
        <notes><![CDATA[
        WireMock vulnerabilities in test scope only - not shipped with production code
        Review Date: 2025-02-01
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.github\.tomakehurst/wiremock.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>
    
</suppressions>